{
  "name": "neurotube-creator",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"npm run dev -w @neurotube/client\" \"npm run dev -w @neurotube/server\"",
    "dev:client": "npm run dev -w @neurotube/client",
    "dev:server": "npm run dev -w @neurotube/server",
    "build": "npm run build -w @neurotube/shared && npm run build -w @neurotube/server && npm run build -w @neurotube/client",
    "build:client": "npm run build -w @neurotube/client",
    "build:server": "npm run build -w @neurotube/server",
    "build:shared": "npm run build -w @neurotube/shared",
    "lint": "tsc --build --dry",
    "clean": "npm run clean --workspaces --if-present",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:unit": "vitest run --config e2e/vitest.config.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "typescript": "~5.8.2"
  }
}
